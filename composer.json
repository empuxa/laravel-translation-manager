{
    "name": "empuxa/translation-manager",
    "description": "A smart translation manager for Laravel.",
    "keywords": [
        "marcoraddatz",
        "empuxa",
        "translation-manager",
        "i18n"
    ],
    "homepage": "https://github.com/empuxa/translation-manager",
    "license": "MIT",
    "authors": [
        {
            "name": "Marco Raddatz",
            "email": "marco@empuxa.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^9.0",
        "spatie/laravel-package-tools": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.24",
        "phpunit/phpunit": "^9.6",
        "roave/security-advisories": "dev-latest",
        "slevomat/coding-standard": "^8.8"
    },
    "autoload": {
        "psr-4": {
            "Empuxa\\TranslationManager\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Empuxa\\TranslationManager\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Empuxa\\TranslationManager\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
